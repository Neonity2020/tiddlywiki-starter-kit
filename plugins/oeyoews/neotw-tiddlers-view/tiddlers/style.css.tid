tags: $:/tags/Stylesheet

.title-scroller {
	height: 2em;
	overflow: hidden;
}
.title-item {
	transition: all 0.8s;
}
.scroll-container {
	overflow: hidden;
	position: relative;
}
.scroll-enter-active,
.scroll-leave-active {
	transition: all 0.8s;
}
.scroll-enter-from {
	transform: translateY(100%);
	opacity: 0;
}
.scroll-leave-to {
	transform: translateY(-100%);
	opacity: 0;
}