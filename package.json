{
  "name": "tiddlywiki-starter-kit",
  "workspaces": [
    "packages/*"
  ],
  "description": "A modern style notebook based on tiddlywiki",
  "version": "4.1.0",
  "author": "oeyoews <jyao4783@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@8.8.0",
  "scripts": {
    "new": "node lib/newplugin.mjs",
    "build": "node lib/build.mjs",
    "update:tw": "pnpm install github:Jermolene/TiddlyWiki5",
    "build-with-bun": "bun run ./lib/build.ts",
    "format": "prettier  --write .",
    "format:md": "autocorrect --fix",
    "build:docker": "docker-compose build",
    "docker:push": "docker-compose push",
    "dev": "node ./lib/startup.mjs",
    "start:pm2": "node ./lib/pm2-control.js",
    "pandoc": "pandoc --pdf-engine=lualatex .tiddlywiki/markdown/*.md .tiddlywiki/markdown/a*.md -o read.pdf -V CJKmainfont=KaiTi -V geometry:'top=2cm, bottom=1.5cm, left=2cm,right=2cm' --toc -N  --highlight-style kate  -V urlcolor=NavyBlue   -f markdown-raw_tex",
    "preparebk": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm autocorrect --fix"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/qrcode": "^1.5.5",
    "ci-info": "^3.9.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "get-port": "^7.0.0",
    "ora": "^6.3.1",
    "prompts": "^2.4.2",
    "qrcode": "^1.5.3",
    "tiddlywiki": "5.3.3",
    "tiged": "^2.12.5"
  },
  "prettier": "@oeyoews/prettier-config",
  "devDependencies": {
    "@oeyoews/prettier-config": "workspace:^",
    "@types/prompts": "^2.4.9",
    "address": "^1.2.2",
    "autocorrect-node": "^2.9.0",
    "chalk": "^5.3.0",
    "cross-spawn": "^7.0.3",
    "open": "^10.0.1",
    "pm2": "^5.3.0",
    "prettier": "^3.1.1",
    "randomstring-plus": "workspace:^",
    "simple-git-hooks": "^2.9.0",
    "terser": "^5.26.0",
    "tw5-typed": "^0.4.4",
    "typescript": "^5.3.3"
  }
}